<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_writer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".writer.WriterActivity">

        <LinearLayout
            android:id="@+id/layout_function"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ballpointPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/ballpoint" />

            <Button
                android:id="@+id/fountainPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/fountain" />

            <Button
                android:id="@+id/charcoalPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/charcoal" />

            <Button
                android:id="@+id/charcoalPenV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/charcoal_v2" />

            <Button
                android:id="@+id/brushPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/brush" />

            <Button
                android:id="@+id/markerPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="@string/marker" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/clearPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:background="@color/black"
                android:contentDescription="@string/clear_page"
                app:srcCompat="@drawable/deletepage" />
        </LinearLayout>

        <com.onyx.dailydiary.utils.BitmapView
            android:id="@+id/writerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_function" />
    </RelativeLayout>
</layout>